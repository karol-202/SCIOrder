<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerProductOrderEditParams"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:overScrollMode="never"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
	<Button
			android:text="@string/action_order_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonProductOrderEdit"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/recyclerProductOrderEditParams"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			style="@style/Widget.MaterialComponents.Button.TextButton.Dialog" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
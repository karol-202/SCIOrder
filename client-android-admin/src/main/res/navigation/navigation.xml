<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation"
            app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment"
              android:name="pl.karol202.sciorder.client.android.admin.ui.fragment.LoginFragment"
              android:label="@string/fragment_login">

        <action android:id="@+id/action_login_to_stores"
                app:destination="@id/storesFragment"/>

        <action android:id="@+id/action_login_to_register"
                app:destination="@id/registerFragment"/>
    </fragment>

    <fragment android:id="@+id/registerFragment"
              android:name="pl.karol202.sciorder.client.android.admin.ui.fragment.RegisterFragment"
              android:label="@string/fragment_register">

        <action android:id="@+id/action_register_to_stores"
                app:destination="@id/storesFragment"/>
    </fragment>

    <fragment android:id="@+id/storesFragment"
              android:name="pl.karol202.sciorder.client.android.admin.ui.fragment.StoresFragment"
              android:label="@string/fragment_stores">

        <action android:id="@+id/action_stores_to_store"
                app:destination="@id/storeFragment"/>

    </fragment>

    <fragment android:id="@+id/storeFragment"
              android:name="pl.karol202.sciorder.client.android.admin.ui.fragment.StoreFragment">

        <action android:id="@+id/action_store_to_productEdit"
                app:destination="@id/productEditFragment"/>
    </fragment>

    <fragment android:id="@+id/productEditFragment"
              android:name="pl.karol202.sciorder.client.android.admin.ui.fragment.ProductEditFragment"
              android:label="@string/fragment_product_edit"/>
</navigation>

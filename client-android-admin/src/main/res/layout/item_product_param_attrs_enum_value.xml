<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

    <RadioButton
            android:id="@+id/radioProductEditParamAttrEnumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textProductEditParamAttrEnumValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/radioProductEditParamAttrEnumValue"
            app:layout_constraintBottom_toBottomOf="@+id/radioProductEditParamAttrEnumValue"
            app:layout_constraintStart_toEndOf="@+id/radioProductEditParamAttrEnumValue"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:text="@string/unknown"/>

    <ImageButton
            android:id="@+id/buttonProductEditParamAttrEnumValueRemove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_delete_white_24dp"
            style="@style/AppTheme.Icon.Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>

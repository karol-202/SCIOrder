<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textProductEditParamAttrsNumericRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/editLayoutProductEditParamAttrsNumericMin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editLayoutProductEditParamAttrsNumericMin"
            android:text="@string/text_product_edit_param_attrs_range"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editLayoutProductEditParamAttrsNumericMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textProductEditParamAttrsNumericRange"
            app:layout_constraintEnd_toStartOf="@id/textProductEditParamAttrsNumericHyphen"
            app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextProductEditParamAttrsNumericMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/textProductEditParamAttrsNumericHyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/editLayoutProductEditParamAttrsNumericMin"
            app:layout_constraintStart_toEndOf="@id/editLayoutProductEditParamAttrsNumericMin"
            app:layout_constraintEnd_toStartOf="@id/editLayoutProductEditParamAttrsNumericMax"
            android:text="@string/text_product_edit_param_attrs_hyphen"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editLayoutProductEditParamAttrsNumericMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textProductEditParamAttrsNumericHyphen"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextProductEditParamAttrsNumericMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/textProductEditParamAttrsNumericDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/editLayoutProductEditParamAttrsNumericDefault"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editLayoutProductEditParamAttrsNumericDefault"
            android:text="@string/text_product_edit_param_attrs_default"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editLayoutProductEditParamAttrsNumericDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/editLayoutProductEditParamAttrsNumericMin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textProductEditParamAttrsNumericDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextProductEditParamAttrsNumericDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
